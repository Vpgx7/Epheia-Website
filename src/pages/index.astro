---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
actions={[
  {
    variant: 'primary',
    text: 'Sign Up for Updates',
    href: '/contact',
    icon: 'tabler:mail',
  },
]}
>
<Fragment slot="title">
  <span class="text-[#1e3a5f]">Ephemeral Zero-Retention AI for Ethical Medicine</span>
</Fragment>

  <Fragment slot="subtitle">
    <span class="text-xl font-semibold text-gray-900 dark:text-gray-100">
     Adaptive in real time, never storing raw inputs
    </span>
    <span class="block mt-3 text-lg">
      Secure, innovative, and HIPAA/GDPR‑ready designed for telemedicine, mental health analytics, and beyond.
    </span>
  </Fragment>
</Hero>

  <!-- About Section -->
<Content
  id="about"
  tagline="About Epheia"
  title="Transforming Medicine Through Ephemeral AI"
  content="We’re building ephemeral, zero‑retention AI that puts ethics and privacy first. No raw data survives beyond a session, yet adaptive analytics still power telemedicine, mental‑health and EHR use cases."
  items={[
    {
      title: 'Founded by Vincent Giacomo',
      description: '<ul class="list-disc list-inside space-y-2"><li>Inventor of Epheia’s zero‑retention AI framework (12 provisional patents)</li><li>Holds a Master\'s in Biomedical Sciences from Geisinger Commonwealth School of Medicine and is committed to delivering patient‑centric, ethical, and innovative AI‑driven care</li></ul>',
      icon: 'tabler:user',
    },
    {
      title: 'Our Mission',
      description: '<ul class="list-disc list-inside space-y-2"><li>Advance medicine with AI that earns and protects patient trust</li></ul>',
      icon: 'tabler:target',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>

  <!-- Features Widget *************** -->

  <Features
  id="technology"
  tagline="Technology"
  title="Why Our Tech is Different"
  subtitle="Patent‑pending technology built for healthcare‑grade privacy"
  items={[
    {
      title: 'Zero Raw Data-Retention',
      description: 'No raw inputs ever touch disk. Only anonymised deltas persist.',
      icon: 'tabler:shield-lock',
    },
    {
      title: 'Adaptive AI Learning',
      description: 'Delta-based updates for evolving models without retaining raw data.',
      icon: 'tabler:brain',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>

 <!-- Benefits Section -->
<Features2
  id="benefits"
  title="Value Proposition"
  subtitle="Why healthcare providers are exploring Epheia"
  tagline="Benefits"
  items={[
    {
      title: 'Minimizes Breaches',
      description: 'Our zero‑retention design aims to eliminate raw data vulnerabilities in ethical workflows.',
      icon: 'tabler:shield-check',
    },
    {
      title: 'Builds Patient Trust',
      description: 'Adaptive AI designed for privacy-first medicine.',
      icon: 'tabler:users',
    },
    {
      title: 'Accelerates Care',
      description: 'Real-time, compliant insights for faster ethical decisions.',
      icon: 'tabler:rocket',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>


  <!-- CallToAction Widget *********** -->

  <CallToAction
  id="contact"
  title="Ready to Pioneer Ethical AI In Medicine?"
  subtitle="Let's connect—or sign up for updates on our upcoming consumer app"
  actions={[
    {
      variant: 'primary',
      text: 'Contact Us',
      href: '/contact',
      icon: 'tabler:mail',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>