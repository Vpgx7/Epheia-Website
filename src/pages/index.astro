---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
  actions={[
    {
      variant: 'primary',
      text: 'Sign Up for Updates',
      href: '#newsletter',
      icon: 'tabler:mail',
    },
  ]}
>
<Fragment slot="title">
  <span class="text-[#1e3a5f]">Pioneering Ephemeral Zero-Retention AI for Ethical Medicine</span>
</Fragment>

  <Fragment slot="subtitle">
    <span class="text-xl font-semibold text-gray-900 dark:text-gray-100">
      Empowering healthcare with adaptive AI that processes sensitive data in real-time—without storing raw inputs.
    </span>
    <span class="block mt-3 text-lg">
      Secure, compliant, and innovative for telemedicine, mental health analytics, and beyond.
    </span>
  </Fragment>
</Hero>

  <!-- About Section -->
<Content
  id="about"
  tagline="About Epheia"
  title="Transforming Medicine Through Ephemeral AI"
  content="At Epheia, we're a healthcare startup transforming medicine through ephemeral AI that prioritizes ethics and privacy. Our zero-retention framework ensures no raw data persists beyond sessions, enabling adaptive analytics for telemedicine, mental health, and EHR—while fully complying with HIPAA and GDPR."
  items={[
    {
      title: 'Founded by Vincent Giacomo',
      description: 'Inventor of zero-retention AI frameworks (patent-pending) and med school applicant bridging tech and ethical care.',
      icon: 'tabler:user',
    },
    {
      title: 'Our Mission',
      description: 'Innovating for a future where AI enhances medicine without compromising patient trust.',
      icon: 'tabler:target',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>

  <!-- Features Widget *************** -->

  <Features
  id="technology"
  tagline="Technology"
  title="Key Differentiators"
  subtitle="Patent-pending technology designed for healthcare's unique privacy needs"
  items={[
    {
      title: 'Zero Raw Data-Retention',
      description: 'Process sensitive inputs in volatile memory only—no storage, no risks.',
      icon: 'tabler:shield-lock',
    },
    {
      title: 'Adaptive AI Learning',
      description: 'Delta-based updates for evolving models without retaining raw data.',
      icon: 'tabler:brain',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>

 <!-- Benefits Section -->
<Features2
  title="Value Proposition"
  subtitle="Why healthcare providers choose Epheia"
  tagline="Benefits"
  items={[
    {
      title: 'Minimize Breaches',
      description: 'Eliminate raw data vulnerabilities in ethical workflows.',
      icon: 'tabler:shield-check',
    },
    {
      title: 'Build Patient Trust',
      description: 'Adaptive AI designed for privacy-first medicine.',
      icon: 'tabler:users',
    },
    {
      title: 'Accelerate Care',
      description: 'Real-time, compliant insights for faster ethical decisions.',
      icon: 'tabler:rocket',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>


  <!-- CallToAction Widget *********** -->

  <CallToAction
  id="contact"
  title="Ready to pioneer ethical AI in medicine?"
  subtitle="Let's connect—or sign up for updates on our upcoming consumer app."
  actions={[
    {
      variant: 'primary',
      text: 'Contact Us',
      href: 'mailto:contact@epheia.com',
      icon: 'tabler:mail',
    },
    {
      variant: 'secondary',
      text: 'Join MindGuard Waitlist',
      href: '#newsletter',
      icon: 'tabler:bell',
    },
  ]}
  classes={{
    headline: {
      title: 'text-[#1e3a5f] dark:text-[#1e3a5f]'
    }
  }}
/>